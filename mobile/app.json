{
  "expo": {
    "name": "Membership Auto",
    "slug": "membership-auto",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "dark",
    "scheme": "membershipauto",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#0d0d0d"
    },
    "experiments": {
      "typedRoutes": true
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.membershipauto.app"
    },
    "android": {
      "package": "com.membershipauto.app",
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#0d0d0d"
      }
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro"
    },
    "plugins": [
      [
        "expo-build-properties",
        {
          "android": {
            "ndkVersion": "27.3.13750724",
            "minSdkVersion": 24,
            "compileSdkVersion": 35,
            "targetSdkVersion": 35,
            "buildToolsVersion": "35.0.0"
          }
        }
      ],
      "expo-router",
      "expo-font",
      "expo-localization",
      "expo-secure-store",
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow Membership Auto to access your location for parking reminders and store locator."
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "Allow Membership Auto to access your camera to scan receipts and vehicle documents."
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow Membership Auto to access your photos to upload receipts and vehicle images."
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/notification-icon.png",
          "color": "#cba86e"
        }
      ],
      [
        "@sentry/react-native/expo",
        {
          "url": "https://sentry.io/",
          "organization": "membership-auto",
          "project": "membership-auto-mobile"
        }
      ],
      [
        "@stripe/stripe-react-native",
        {
          "merchantIdentifier": "merchant.com.membershipauto.app",
          "enableGooglePay": true
        }
      ]
    ]
  }
}
